@inject IUserProfileService UserProfile
@inject IStore<Menu> MenuStore
@{
    var currentUserId = UserProfile.GetCurrentUserId();
    var treeMenus = MenuStore.GetTreeMenus();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Teaching.Certification.OA.AspNetMvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">
                <ul>
                    <li>欢迎：@UserProfile.GetCurrentUserName()</li>
                    <li>角色：@UserProfile.GetCurrentUserRole()</li>
                    <li>部门：@UserProfile.GetCurrentUserDepartment()</li>
                </ul>
            </div>
            <div class="list-group list-group-flush">
                @foreach (var menu in treeMenus)
                {
                    <a href="#" class="list-group-item list-group-item-action bg-light">@menu?.Item?.Name</a>
                }
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="/">主页 <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Logout">重新登录</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/ChangePassword">修改密码</a>
                        </li>

                        <li class="nav-item">
                            今天是：@DateTime.Now.ToString()
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
