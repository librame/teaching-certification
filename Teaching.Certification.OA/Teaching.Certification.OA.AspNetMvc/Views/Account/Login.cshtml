@model LoginViewModel
@{
    ViewData["Title"] = "用户登录";
    Layout = "_LayoutLite";
}
<!-- Login -->
<div class="row">
    <div class="col-sm-6">

        <div class="form-top">
            OA 办公管理系统
        </div>

        <div class="form-bottom">
            <form id="account" method="post" class="login-form" asp-controller="Account" asp-action="Login">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="UserName" class="sr-only"></label>
                    <input asp-for="UserName" class="form-username form-control" placeholder="用户名（默认：@DbContextPopulator.UserAdministrator | @DbContextPopulator.UserRegister）" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="sr-only"></label>
                    <input asp-for="Password" class="form-password form-control" placeholder="密码（默认：@DbContextPopulator.DefaultPassword）" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            记住我？
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">立即登录</button>
                </div>

                <div class="form-group overflow-hidden">
                    <a asp-action="Register">用户注册</a>
                    |
                    <a asp-action="ForgotPassword">忘记密码</a>
                </div>
            </form>
        </div>

    </div>
</div>