@model ChangePasswordViewModel
@{
    ViewData["Title"] = "修改密码";
}
<!-- Change Password -->
<div class="row">
    <div class="col-sm-6">

        <div class="form-top">
            OA 办公管理系统
        </div>

        <div class="form-bottom">
            <form id="account" method="post" class="login-form" asp-controller="Account" asp-action="ChangePassword">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="OldPassword" class="sr-only"></label>
                    <input asp-for="OldPassword" class="form-password form-control" placeholder="当前密码" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewPassword" class="sr-only"></label>
                    <input asp-for="NewPassword" class="form-password form-control" placeholder="新密码" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ReNewPassword" class="sr-only"></label>
                    <input asp-for="ReNewPassword" class="form-password form-control" placeholder="确认新密码" />
                    <span asp-validation-for="ReNewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn">立即修改</button>
                </div>
            </form>
        </div>

    </div>
</div>